package irop;

public abstract class Sandwhich extends MenuItem {

    public enum SandwhichType{
        SixInch,
        FootLong,  
    }
    
    private SandwhichType SandwhichItem;
    private double price;
    private String description;
    private String name;
    
    public Sandwhich(){
    }
    
    public Sandwhich(SandwhichType SandwhichItem){
         this.SandwhichItem = SandwhichItem;
    }
    
    public SandwhichType getSandwhichItem() {
        return SandwhichItem;
    }
    
 
    @Override
    public double getPrice() {
        
        switch(this.SandwhichItem) {
            case SixInch:
                    price = 6.00;
                    break;
            case FootLong:
                    price = 8.00;
                    break;         
            default:
                    break;
        }
        return price;
    }
    
     public String getName() {
         
        String s = SandwhichItem.name();
        String[] r = s.split("(?=\\p{Upper})");
        name = r[0] + " " + r[1]; 
        
        return name;
    }
    
    @Override
    public String getDescription() {
        switch(this.SandwhichItem) {
            case SixInch:
                    description = "Half a foot long, same great taste ";
                    break;
            case FootLong:
                    description = "Same great taste as the Six Inch, but longer";
                    break;         
           default:
                    break;
        } 
        return description;
    }
    
    @Override
    public String toString() {
        return "Menu Item = " + name + ", " + "'" + description + "'" + 
                " Price = " + "$" + price;
    }

    /*public static void main(String[] args) {
        Sandwhich mySandwhich = new Sandwhich(){};
        
        // Setting all variables
        mySandwhich.setSandwhichItem(SandwhichType.SixInch);
        mySandwhich.setSandwhichItem(SandwhichType.FootLong);
        
        // Getting all variables values
        System.out.println(mySandwhich.getBreadItem());
        System.out.println(mySandwhich.getName());
        System.out.println("$" + mySandwhich.getPrice());
        System.out.println(mySandwhich.getDescription());
        
        // Displaying toString
        System.out.println(mySandwhich.toString());
    }// Main*/
    
}// Sandwhich
